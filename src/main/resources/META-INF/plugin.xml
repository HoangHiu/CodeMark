<idea-plugin>
    <id>com.plug.codemarkplugin</id>
    <name>CodeMark</name>
    <vendor email="you@example.com">Your Name</vendor>
    <version>1.0.0</version>

    <description>
        Plugin for highlighting code blocks, taking notes, and managing bookmarks.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="com.plug.codemarkplugin.TakeNoteAction"
                class="com.plug.codemarkplugin.actions.TakeNoteAction"
                text="Take Note"
                description="Take a note on selected code">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>

    <!-- Register tool window -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Code Notes"
                    anchor="right"
                    factoryClass="com.plug.codemarkplugin.ui.NotesToolWindowFactory"
                    icon="/icons/pluginIcon.svg"/>
    </extensions>
</idea-plugin>
